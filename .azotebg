#!/usr/bin/env bash
pkill swaybg

if [[ -d "$HOME/.local/share/wallpapers" ]]; then
    WP_PATH="$HOME/.local/share/wallpapers"
else
    WP_PATH='/usr/share/wallpapers' 
fi

if [[ -d $WP_PATH ]]; then
    WP_FILE="$(find $WP_PATH -type f | shuf -n 1)"
    swaybg -o eDP-1 -i "$WP_FILE" -m fill &
fi


