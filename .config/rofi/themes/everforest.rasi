* {
    font:             "mononoki Nerd Font 16";
    margin:           0;
    padding:          0;
    spacing:          0;
    bg0:              #2B3339;
    bg1:              #323D43;
    fg0:              #D3C6AA;
    active-color:     #83C092;
    urgent-color:     #DBBC7F;
    selected-color:   #D3C6AA;
    highlight-color:  #A7C080;
    highlight-style:  bold #A7C080;
    vertical-align:   0.5;
    background-color: transparent;
    text-color:       @fg0;
}

window {
    location:         north;
    width:            60%;
    y-offset:         20%;
    background-color: @bg0;
    border-color:     @selected-color;
    border:           1px;
    padding:          0 0.5em;
}

inputbar {
    margin:           0.5em 0 1em 0;
    background-color: @bg1;
    padding:          0.5em;
    children:         [ "textbox-prompt-colon", "entry", "mode-switcher"];
}
textbox {
    background-color: @bg1;
}
textbox-prompt-colon {
    enabled:          true;
    expand:           false;
    str:              "ï€‚ ";
    padding:          0 0 0 0.25em;
}
prompt {
    enabled:          false;
}
entry {
    cursor:           text;
    expand:           true;
    padding:          0 0 0 1em;
    placeholder:      "Search...";
}

mode-switcher {
    spacing: 0;
    expand: false;
}
button {
    cursor: pointer;
    background-color: @bg1;
}
button selected {
    text-color: @active-color;
}


listview {
    padding:          0.25em 0;
    lines:            8;
    columns:          1;
    fixed-height:     false;
}

element {
    padding:          0.5em;
    spacing:          1em;
    border:           1px;
    border-color:     @bg0;
    text-color:       @fg0;
}

element urgent {
    text-color:       @urgent-color;
}

element active {
    text-color:       @active-color;
}

element selected {
    border-color:     @selected-color;
}

element-icon {
    size:             1.25em;
}

element-text {
    text-color:       inherit;
    highlight:        @highlight-style;
}

